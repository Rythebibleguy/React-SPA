// Firestore Security Rules for Daily Bible Quiz
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Only the owner can read, create, update, or delete their own profile.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Anyone can list/query (e.g. signup: check if displayName is taken).
      allow list: if true;
    }
    
    match /usersPrivate/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
